{
  "name": "quick-app-shop",
  "version": "1.0.0",
  "description": "Quick App Sample - Shopping",
  "scripts": {
    "build": "hap build",
    "start": "hap server --watch",
    "server": "hap server",
    "gen": "node ./scripts/gen/index.js",
    "release": "hap release",
    "watch": "hap watch",
    "debug": "hap debug",
    "precommit-msg": "echo 'ðŸš§ start pre-commit checks...' && exit 0",
    "prettier": "node ./scripts/selfCloseInputTag.js && prettier --write \"src/**/*.{js,ux,less,scss,css}\"",
    "prettier-watch": "onchange '**/*.md' \"src/**/**/*.{js,ux,less,scss,css}\" -- prettier --write {{changed}}"
  },
  "dependencies": {
    "apex-ui": "latest",
    "colors": "^1.4.0",
    "fs": "^0.0.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/quickapp": "github:vivoquickapp/quickapp-types",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-hybrid": "0.0.5",
    "hap-toolkit": "^1.9.0",
    "husky": "^4.3.0",
    "less": "^3.13.1",
    "less-loader": "^7.3.0",
    "lint-staged": "^10.4.0",
    "onchange": "^5.2.0",
    "prettier": "^2.1.2",
    "prettier-plugin-quickapp": "^0.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 80,
    "proseWrap": "never"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit-msg && lint-staged"
    }
  },
  "lint-staged": {
    "**/**.{ux,js,json,pcss,md,vue}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "quick app",
    "shopping"
  ],
  "browserslist": [
    "chrome 65"
  ]
}
